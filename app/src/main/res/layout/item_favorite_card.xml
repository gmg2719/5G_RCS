<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/favorite_card_style"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_margin="10dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">
    <include layout="@layout/favorite_card_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fav_card_image"
            android:layout_alignParentRight="true"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
        <TextView
            android:id="@+id/fav_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fav_card_image"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="14dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="[参与投票] 全国各地#高考作文#已出炉，你觉得今年的高考作文难…"
            android:textColor="#0D1333"
            android:textSize="14sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/fav_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:textSize="12sp"
        android:textColor="#6D7278"
        android:text="2020/04/21"/>
</LinearLayout>
