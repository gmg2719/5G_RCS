<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <include layout="@layout/item_news_bottom"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/zhibo_image"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/ic_default"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/business_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:layout_marginLeft="28dp"
                android:paddingRight="8dp"
                android:src="@drawable/ic_ime_dark"
                />
            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_toRightOf="@id/business_logo"
                android:layout_alignBottom="@id/business_logo"
                android:layout_alignTop="@id/business_logo"
                android:gravity="center"
                android:text="杭州发布"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/tv_zhibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播"
                android:textStyle="bold"
                android:background="#EE7621"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/text_grey"
                android:layout_alignBaseline="@id/tv_zhibo"
                android:layout_toRightOf="@id/tv_zhibo"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textStyle="bold"
                android:text="2234人观看"/>
            <TextView
                android:id="@+id/zhibo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_zhibo"
                android:layout_alignLeft="@id/tv_zhibo"
                android:paddingBottom="8dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>

