<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/card_message_style">
    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="验证码通知"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/item1_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="验证码"
        android:gravity="center"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item1_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="123456"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"/>

    <com.android.messaging.ui.conversation.santilayout.expandableview.ExpandableTextView
        android:id="@+id/expand_tv_yzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:collapseDrawable="@drawable/icon_content_collap"
        app:collapseLines="1"
        android:text="您的验证码是：123456，请不要把验证码给其他人看，以免泄露"
        android:textColor="#000000"
        app:expandDrawable="@drawable/icon_content_expand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tipPosition="align_right"
        app:tipsColor="@color/colorBlue"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="复制验证码"
        android:textColor="@color/colorBlue"
        android:textSize="16sp"
        android:gravity="center"
        android:clickable="true"
        android:visibility="gone"
        android:background="@drawable/bottom_button_shape"/>

</LinearLayout>
