<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/danmu_title"
        android:id="@+id/myactionbar"/>
    <com.android.messaging.ui.conversation.SantiVideoView
        android:id="@+id/mSantiVideoView"
        android:layout_below="@id/myactionbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <RelativeLayout
        android:id="@+id/danmu_settings"
        android:layout_width="match_parent"
        android:layout_below="@id/mSantiVideoView"
        android:paddingTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="弹幕透明度："
            android:textColor="@color/text_grey"/>

        <Switch
            android:id="@+id/switch_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="12dp"
            android:showText="true"
            android:textStyle="bold"
            android:textSize="12sp"
            android:switchTextAppearance="@style/SwitchTextColorTheme"
            android:track="@drawable/switch_custom_track_selector"
            android:thumb="@drawable/switch_custom_thumb_on"
            android:checked="true"
            android:textOn="弹"
            android:textOff="弹"/>

        <ImageView
            android:id="@+id/my_divider_line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/switch_danmaku"
            android:paddingLeft="12dp"
            android:background="@color/text_grey"/>
        <TextView
            android:id="@+id/tv_alphaInd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/my_divider_line"
            android:paddingRight="12dp"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/alpha_set"
            android:layout_toLeftOf="@id/tv_alphaInd"
            android:layout_toRightOf="@id/tv_danmaku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="16dp"
            android:textAlignment="textEnd"
            android:showText="true"
            android:thumb="@drawable/danmu_alphasetting_thumb_selector"
            android:progressDrawable="@drawable/danmu_alphasetting_track"
            android:maxHeight="4dp"
            android:progress="70"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/danmu_settings"
        android:background="#ededed"
        android:gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"/>
        <LinearLayout
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_below="@id/divider1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textSize="12sp"
                android:text="精彩评论："/>
            <TextView
                android:id="@+id/comment_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/divider2"
            android:layout_below="@id/comments"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"/>
        <com.android.messaging.ui.conversation.AutoPollRecyclerView
            android:id="@+id/comments_view"
            android:layout_below="@id/divider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/compose_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ime_dark"/>
            <TextView
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="8dp"
                android:text="发送"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorBlue"
                android:layout_centerVertical="true"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/my_divider_line2"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_toLeftOf="@id/send_button"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/text_grey"/>
            <EditText
                android:id="@+id/dmcontent"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/compose_img"
                android:layout_toLeftOf="@id/my_divider_line2"
                android:paddingLeft="16dp"
                android:textSize="12sp"
                android:hint="说两句吧~"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
