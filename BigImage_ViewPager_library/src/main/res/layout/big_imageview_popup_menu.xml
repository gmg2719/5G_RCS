<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/popup_menu_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/send_to_friend"
            style="@style/bottom_pop_textview"
            android:text="发送给朋友"
            android:textColor="#0D1333"/>
        <TextView
            android:id="@+id/save_image"
            style="@style/bottom_pop_textview"
            android:text="保存图片"
            android:textColor="#0D1333"
            />
        <TextView
            android:id="@+id/recognize_qrcode"
            style="@style/bottom_pop_textview"
            android:text="识别图中二维码"
            android:textColor="#0D1333"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#F0F0F0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/more_popup_menu_bg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cancel"
            style="@style/bottom_pop_textview"
            android:paddingBottom="34dp"
            android:text="取消"
            android:textColor="#0D1333"/>
        <View
            android:layout_width="134dp"
            android:layout_height="4dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="9dp"/>
    </LinearLayout>
</LinearLayout>
